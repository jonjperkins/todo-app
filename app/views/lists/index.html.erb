<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1" id="index-page">
      <div class="row">
        <h1 class="text-center" id="index-title">Lists</h1>
          <div class="title-spacing">
          <div class="col-xs-4 list-boxes" id="new-list"> 
            <%= link_to 'New List', new_list_path %>
            <div class="title text-center">New list</div>
            <div class="text-center"><i class="glyphicon glyphicon-plus-sign" id="new-list-button"></i></div>
          </div>
          <% @lists.reverse.each do |list| %>
            <div class="col-xs-4 list-boxes text-center"> 
              <%= link_to list.title, list %>
              <div class="title"><%= list.title %></div>
              <div id="items-left-description"><%= pluralize list.items.count, "item"%> on this list</div>
            </div>
          <% end %>
          </div>
      </div> 
    </div>
  </div>
</div>
